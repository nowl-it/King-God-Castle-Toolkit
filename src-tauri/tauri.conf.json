{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "King God Castle Toolkit",
	"version": "0.0.2",
	"identifier": "com.nowl.kgc-toolkit",
	"build": {
		"beforeDevCommand": "pnpm run dev",
		"devUrl": "http://localhost:3000",
		"beforeBuildCommand": "pnpm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "King God Castle Toolkit",
				"width": 1080,
				"height": 720,
				"resizable": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
		"resources": ["binaries/**/*"],
		"createUpdaterArtifacts": true
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDYxQjY3M0U4MTkzMkREOUUKUldTZTNUSVo2SE8yWVMyUWNGTnFJOS9DUjI1eTdCMkRjWFlXNUZkNjdDY3Q2NjlJSzdBSTUvbjYK",
			"endpoints": ["https://github.com/nowl-it/King-God-Castle-Toolkit/releases/latest/download/latest.json"],
			"dialog": true
